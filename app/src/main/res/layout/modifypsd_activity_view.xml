    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginTop="@dimen/margin_24_dp"
        android:layout_marginRight="@dimen/margin_10_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="新  密  码："
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/modify_psd_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/search_drawable"
            android:hint="请输入新密码"
            android:inputType="phone"
            android:paddingBottom="@dimen/margin_5_dp"
            android:paddingLeft="@dimen/margin_10_dp"
            android:paddingRight="@dimen/margin_10_dp"
            android:paddingTop="@dimen/margin_5_dp"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/font_size_18" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_10_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="确认密码："
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/modify_psd_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/search_drawable"
            android:hint="确认新密码"
            android:inputType="phone"
            android:paddingBottom="@dimen/margin_5_dp"
            android:paddingLeft="@dimen/margin_10_dp"
            android:paddingRight="@dimen/margin_10_dp"
            android:paddingTop="@dimen/margin_5_dp"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/font_size_18" />


    </LinearLayout>



    <TextView
        android:id="@+id/modify_psd_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改"
        android:textSize="@dimen/font_size_18"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/but_selected_drawable"
        android:layout_marginTop="@dimen/margin_72_dp"
        android:layout_marginLeft="@dimen/margin_24_dp"
        android:layout_marginRight="@dimen/margin_24_dp"
        android:layout_marginStart="@dimen/margin_24_dp"
        android:layout_marginEnd="@dimen/margin_24_dp"
        android:paddingTop="@dimen/margin_8_dp"
        android:paddingBottom="@dimen/margin_8_dp"
        android:textColor="@color/white"
        />



</LinearLayout>