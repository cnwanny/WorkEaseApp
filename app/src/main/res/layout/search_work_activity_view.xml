<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/title_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/search_work_provice"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:text="请选择省/市："
            android:padding="@dimen/margin_10_dp"
            android:drawableRight="@mipmap/icon_body_upper"
            android:drawableEnd="@mipmap/icon_body_upper"
            android:drawablePadding="@dimen/margin_5_dp"
            android:textSize="@dimen/font_size_16"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            />

        <TextView
            android:id="@+id/search_work_area"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:text="请选择市/区："
            android:padding="@dimen/margin_10_dp"
            android:drawableRight="@mipmap/icon_body_upper"
            android:drawableEnd="@mipmap/icon_body_upper"
            android:drawablePadding="@dimen/margin_5_dp"
            android:textSize="@dimen/font_size_16"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1_dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <TextView
            android:id="@+id/search_work_type"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/text_half_black"
            android:text="工种"
            android:layout_marginLeft="@dimen/margin_20_dp"
            android:layout_marginStart="@dimen/margin_20_dp"
            />


        <TextView
            android:id="@+id/search_work_typeselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:hint="请选择工种"
            android:padding="@dimen/margin_10_dp"
            android:drawableRight="@mipmap/icon_body_upper"
            android:drawableEnd="@mipmap/icon_body_upper"
            android:drawablePadding="@dimen/margin_5_dp"
            android:textSize="@dimen/font_size_16" />

    </RelativeLayout>

    <TextView
        android:id="@+id/search_work_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"
        android:textSize="@dimen/font_size_18"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/but_selected_drawable"
        android:layout_marginTop="@dimen/margin_24_dp"
        android:layout_marginLeft="@dimen/margin_24_dp"
        android:layout_marginRight="@dimen/margin_24_dp"
        android:layout_marginStart="@dimen/margin_24_dp"
        android:layout_marginEnd="@dimen/margin_24_dp"
        android:paddingTop="@dimen/margin_8_dp"
        android:paddingBottom="@dimen/margin_8_dp"
        android:textColor="@color/white"
        />
    <include layout="@layout/orinal_recycler_view"/>
</LinearLayout>