<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <include layout="@layout/title_view"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24_dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/bus_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:background="@null"
            android:hint="请输入名字"
            android:padding="@dimen/margin_10_dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/font_size_16" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1_dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <EditText
            android:id="@+id/bus_register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:inputType="phone|number"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:padding="@dimen/margin_10_dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/font_size_16" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1_dp"
        android:background="@color/line_color" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <EditText
            android:id="@+id/bus_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:background="@null"
            android:hint="请输入密码"
            android:padding="@dimen/margin_10_dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/font_size_16" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1_dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <EditText
            android:id="@+id/bus_register_againpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:inputType="phone|number"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:background="@null"
            android:hint="确认密码"
            android:padding="@dimen/margin_10_dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/font_size_16" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1_dp"
        android:background="@color/line_color" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/bus_register_area_provice"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:text="请选择省/市："
            android:padding="@dimen/margin_10_dp"
            android:drawableRight="@mipmap/icon_body_upper"
            android:drawableEnd="@mipmap/icon_body_upper"
            android:drawablePadding="@dimen/margin_5_dp"
            android:textSize="@dimen/font_size_16"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            />

        <TextView
            android:id="@+id/bus_register_area"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:text="请选择市/区："
            android:padding="@dimen/margin_10_dp"
            android:drawableRight="@mipmap/icon_body_upper"
            android:drawableEnd="@mipmap/icon_body_upper"
            android:drawablePadding="@dimen/margin_5_dp"
            android:textSize="@dimen/font_size_16"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp" />

    </RelativeLayout>





    <TextView
        android:id="@+id/bus_start_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="@dimen/font_size_18"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/but_selected_drawable"
        android:layout_marginTop="@dimen/margin_72_dp"
        android:layout_marginLeft="@dimen/margin_24_dp"
        android:layout_marginRight="@dimen/margin_24_dp"
        android:layout_marginStart="@dimen/margin_24_dp"
        android:layout_marginEnd="@dimen/margin_24_dp"
        android:paddingTop="@dimen/margin_8_dp"
        android:paddingBottom="@dimen/margin_8_dp"
        android:textColor="@color/white"
        />
</LinearLayout>