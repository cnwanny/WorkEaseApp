<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/work_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:layout_weight="1"
            android:text="工种：抹灰工"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_20" />

        <TextView
            android:id="@+id/work_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:layout_weight="1"
            android:text="价格：5元/平方木"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_20" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/work_item_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10_dp"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginRight="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:layout_weight="1"
            android:text="区域：渝北"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_17" />

        <TextView
            android:id="@+id/work_item_neednumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10_dp"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginRight="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:layout_weight="1"
            android:text="需求人数：10人"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_17" />

    </LinearLayout>


    <TextView
        android:id="@+id/work_item_projectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10_dp"
        android:textSize="@dimen/font_size_17"
        android:textColor="@color/gray"
        android:text="融创康乾融府"
        />

</LinearLayout>