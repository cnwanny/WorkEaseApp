<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_color"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/login_app_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_48_dp"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/login_one_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_app_login"
        android:layout_marginTop="@dimen/margin_24_dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:background="@null"
            android:hint="手机号"
            android:padding="@dimen/margin_10_dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/font_size_16" />

    </RelativeLayout>

    <View
        android:id="@+id/login_one_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1_dp"
        android:layout_below="@+id/login_one_rel"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/login_two_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_one_line"
        android:background="@color/white">

        <TextView
            android:id="@+id/login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_10_dp"
            android:layout_marginRight="@dimen/margin_10_dp"
            android:text="忘记密码"
            android:textColor="@color/low_blue"
            android:textSize="@dimen/font_size_14" />


        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:layout_toLeftOf="@+id/login_forget_password"
            android:layout_toStartOf="@+id/login_forget_password"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="@dimen/margin_10_dp"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/font_size_16" />

    </RelativeLayout>

    <View
        android:id="@+id/login_two_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1_dp"
        android:layout_below="@+id/login_two_rel"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/start_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_two_line"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/margin_24_dp"
        android:layout_marginLeft="@dimen/margin_24_dp"
        android:layout_marginRight="@dimen/margin_24_dp"
        android:layout_marginStart="@dimen/margin_24_dp"
        android:layout_marginTop="@dimen/margin_72_dp"
        android:background="@drawable/but_selected_drawable"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_10_dp"
        android:paddingTop="@dimen/margin_10_dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/start_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/margin_24_dp"
        android:layout_marginLeft="@dimen/margin_24_dp"
        android:layout_marginRight="@dimen/margin_24_dp"
        android:layout_marginStart="@dimen/margin_24_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:background="@drawable/but_notselect_drawable"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_10_dp"
        android:paddingTop="@dimen/margin_10_dp"
        android:text="注册"
        android:textColor="@color/low_blue"
        android:textSize="@dimen/font_size_18" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_register"
        android:layout_marginEnd="@dimen/margin_24_dp"
        android:layout_marginLeft="@dimen/margin_24_dp"
        android:layout_marginRight="@dimen/margin_24_dp"
        android:layout_marginStart="@dimen/margin_24_dp"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:text="无责申明：\n本平台仅为用户提供信息参考，具体信息真伪需用户自行判定，若用户因本平台提供的信息而产生安全、财产等损失，均与本平台无关。"
        android:textColor="@color/grey_helf"
        android:textSize="@dimen/font_size_10" />

    <TextView
        android:id="@+id/login_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_copyright"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-5dp"
        android:text="客服热线13220286010"
        android:textColor="@color/low_blue"
        android:textSize="@dimen/font_size_11" />

    <TextView
        android:id="@+id/login_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_10_dp"
        android:text="copyright2017重庆易知工网络科技有限公司"
        android:textColor="@color/low_blue"
        android:textSize="@dimen/font_size_11" />

</RelativeLayout>