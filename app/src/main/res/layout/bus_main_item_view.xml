<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bus_main_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="名字"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:layout_marginBottom="@dimen/margin_10_dp"
            android:textColor="@color/text_half_black"
            android:textSize="@dimen/font_size_16"
            />

        <TextView
            android:id="@+id/bus_main_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/orange"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_size_18"
            android:text="电话"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/bus_main_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空闲"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_size_16"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_black"
            android:gravity="center"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_5_dp">

        <TextView
            android:id="@+id/bus_main_item_worktype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抹灰工"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_half_black"
            android:textSize="@dimen/font_size_16"
            android:layout_marginTop="@dimen/margin_5_dp"
            android:layout_marginBottom="@dimen/margin_5_dp"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/bus_main_item_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/text_half_black"
            android:layout_gravity="center_vertical"
            android:text="熟练"
            />


        <TextView
            android:id="@+id/bus_main_item_worktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_half_black"
            android:textSize="@dimen/font_size_16"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="8年"
            />

    </RelativeLayout>
</LinearLayout>