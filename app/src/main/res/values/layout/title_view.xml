<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/low_blue"
    android:layout_height="wrap_content">


<TextView
    android:id="@+id/title_left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:textSize="@dimen/font_size_14"
    android:text="返回"
    android:drawableLeft="@mipmap/icon_title_back"
    android:drawableStart="@mipmap/icon_title_back"
    android:layout_marginLeft="@dimen/margin_10_dp"
    android:layout_marginStart="@dimen/margin_10_dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_marginTop="@dimen/margin_10_dp"
    android:layout_marginBottom="@dimen/margin_10_dp"
    />


    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textSize="@dimen/font_size_18"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:layout_marginBottom="@dimen/margin_10_dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/title_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="center"
        />

    <TextView
        android:id="@+id/title_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_14"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:layout_marginBottom="@dimen/margin_10_dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>