<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/low_blue</item>
    </style>
    <style name="TabLayoutTextColor">
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <!-- 去掉黑色的边框的dialog -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!-- listview下textview的样式 -->
    <style name="auto_textview">
        <item name="android:paddingBottom">@dimen/margin_10_dp</item>
        <item name="android:paddingTop">@dimen/margin_10_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_10_dp</item>
        <item name="android:layout_marginTop">@dimen/margin_10_dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_10_dp</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- list样式-带有下划线 -->

    <style name="listview_5dp_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">@dimen/margin_5_dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@color/transparent</item>
    </style>


    <style name="listview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/submit_nonrmal_color</item>
        <item name="android:dividerHeight">@dimen/margin_1_dp</item>
        <item name="android:listSelector">@color/transparent</item>
    </style>

    <style name="listview2dp_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/white_white</item>
        <item name="android:dividerHeight">@dimen/margin_0.5_dp</item>
        <item name="android:listSelector">@color/transparent</item>
    </style>

    <style name="listview2dp_gluy_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/white_white</item>
        <item name="android:dividerHeight">@dimen/margin_2_dp</item>
        <item name="android:listSelector">@color/user_activity_page_bg</item>
    </style>


    <style name="listview2dp_blue_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/notdate_netfail_color</item>
        <item name="android:dividerHeight">@dimen/margin_2_dp</item>
        <item name="android:listSelector">@color/user_activity_page_bg</item>
    </style>


    <!-- list样式-不带有下划线 -->
    <style name="listview_style_noline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@null</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">@dimen/margin_0.5_dp</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
    </style>

    <style name="vscenic_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_1_dp</item>
        <item name="android:background">@color/line_bg_glue</item>
    </style>

    <style name="view_anim">
        <item name="android:windowEnterAnimation">@anim/guid_fade_in</item>
        <item name="android:windowExitAnimation">@anim/guid_fade_out</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


    <style name="Anim_style2" parent="android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
    </style>

    <style name="horizontal_slide" parent="android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>

    <style name="nornal_style" parent="android:style/Theme.Holo.Light.NoActionBar"></style>

</resources>
